<div class="container">
  <div class="title">
    <h1>Mes Taches</h1>
  <div>

  <div class="task">
    <ul class="list-group list-group-flush">
      <% @tasks.each do |task| %>
      <li class="list-group-item"><%= link_to task.title, show_path(task.id) %></li>
      <% end %>
    </ul>

    <div class="add border-top pt-3">
      <p class="button-action"><i class="fa-solid fa-plus"></i> <%= link_to "Ajoutez une tache", new_path %></p>
    </div>
  </div>
</div>
